              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_TEAM_MEMBER_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Team Member",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/teams/:id",
              "host": ["{{baseUrl}}"],
